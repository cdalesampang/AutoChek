@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string layout = "";
    switch (controller.ToLower())
    {
       
        case "manage":
            layout = "~/Views/Shared/_AdminLayout.cshtml";
            break;
        default:
            layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }


    Layout = layout;
}

